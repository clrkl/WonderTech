  <script>
    // Simple filter functionality for technician list
    const searchInput = document.getElementById('search-tech');
    const techList = document.getElementById('tech-list');
    const techItems = techList.getElementsByTagName('li');

    searchInput.addEventListener('input', function () {
      const filter = this.value.toLowerCase();
      for (let i = 0; i < techItems.length; i++) {
        const techName = techItems[i].textContent.toLowerCase();
        techItems[i].style.display = techName.includes(filter) ? '' : 'none';
      }
    });
  </script>
